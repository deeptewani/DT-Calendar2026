                { date: 13, day: "Sun", name: "Satyanarayan Katha", type: "custom-pooja" },
                { date: 20, day: "Sun", name: "Monthly Kirtan", type: "custom-pooja" },
                { date: 20, day: "Sun", name: "Geeta Jayanti", type: "festival" },
                { date: 27, day: "Sun", name: "Gayatri Pooja", type: "custom-pooja" }
            ]
        };

        const container = document.getElementById('calendar-container');

        // Function to generate the HTML for a single month card
        function generateMonthCard(monthName, events) {
            // Sort events by date
            events.sort((a, b) => a.date - b.date);
            
            let eventsHtml = '';
            events.forEach(event => {
                const badgeClass = event.type === 'festival' 
                    ? 'bg-red-50 text-red-700 festival' 
                    : 'bg-green-50 text-green-700 custom-pooja';
                
                eventsHtml += `
                    <li class="flex items-center space-x-3 p-2 rounded-lg hover:bg-gray-50 transition duration-150">
                        <div class="w-16 flex-shrink-0 text-center">
                            <span class="text-2xl font-bold text-amber-700">${event.date}</span>
                            <span class="text-xs font-medium text-gray-500 block">${event.day}</span>
                        </div>
                        <div class="flex-grow">
                            <span class="text-sm px-2 py-0.5 rounded-full ${badgeClass}">${event.name}</span>
                        </div>
                    </li>
                `;
            });

            return `
                <div class="calendar-card bg-white p-6 rounded-xl border-t-4 border-green-600">
                    <h3 class="text-3xl font-bold mb-4 text-gray-800 border-b pb-2">${monthName}</h3>
                    <ul class="space-y-2">
                        ${eventsHtml}
                    </ul>
                </div>
            `;
        }

        // Loop through all events and render the calendar cards
        for (const month in allEvents) {
            const card = generateMonthCard(month, allEvents[month]);
            container.innerHTML += card;
        }

    </script>
